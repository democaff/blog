---
import Layout from "../layouts/Layout.astro";
import Main from "../components/Main.astro";
import { Icon } from "astro-icon/components";
import { SkillIcons, SkillICons2, SkillICons3 } from "../data/data";
import { Image } from "astro:assets";
---

<Layout title="Welcome to Astro.">
  <Main>
    <h1 class="text-4xl font-bold mb-8">PM</h1>
    <ul class="grid grid-cols-5 gap-8">
      {
        SkillICons2.map((item) => (
          <li class="flex">
            <a class=" flex flex-col items-center gap-4">
              {" "}
              <Icon name={`sk/${item.name}`} class=" text-5xl" />
              <p class=" ">{item.name}</p>
            </a>
          </li>
        ))
      }
    </ul>

    <h1 class="text-4xl font-bold mt-12 mb-8">DEV</h1>
    <ul class="grid grid-cols-5 gap-8">
      {
        SkillIcons.map((item) => (
          <li class="flex">
            <a class=" flex flex-col items-center gap-4">
              {" "}
              <Icon name={`sk/${item.name}`} class=" text-5xl" />
              <p class=" ">{item.name}</p>
            </a>
          </li>
        ))
      }
    </ul>

    <h1 class="text-4xl font-bold mt-12 mb-8">UI/UX</h1>
    <ul class="grid grid-cols-5 gap-8">
      {
        SkillICons3.map((item) => (
          <li class="flex">
            <a class=" flex flex-col items-center gap-4">
              {" "}
              <Icon name={`sk/${item.name}`} class=" text-5xl" />
              <p class=" ">{item.name}</p>
            </a>
          </li>
        ))
      }
    </ul>
  </Main>
</Layout>
